{
    "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 0,
        "analysis": {
            "char_filter": {
                "ignore_quotes": {
                    "type": "mapping",
                    "mappings": [
                        "\u0091=>",
                        "\u0092=>",
                        "\"=>",
                        "'=>",
                        "“=>",
                        "”=>",
                        "‘=>",
                        "’=>",
                        "`=>"
                    ]
                },
                "replace_symbols": {
                    "type": "mapping",
                    "mappings": [
                        "\\u00B7=> ",
                        "\\u00A0=> ",
                        "\\u1680=> ",
                        "\\u180E=> ",
                        "\\u2000=> ",
                        "\\u2001=> ",
                        "\\u2002=> ",
                        "\\u2003=> ",
                        "\\u2004=> ",
                        "\\u2005=> ",
                        "\\u2006=> ",
                        "\\u2007=> ",
                        "\\u2008=> ",
                        "\\u2009=> ",
                        "\\u200A=> ",
                        "\\u202F=> ",
                        "\\u205F=> ",
                        "\\u3000=> ",
                        "\\u0009=> ",
                        "\\u200B=>",
                        "\\uFEFF=>"
                    ]
                },
                "remove_punctuation": {
                    "pattern": "\\p{Punct}+",
                    "type": "pattern_replace",
                    "replacement": " "
                },
                "reduce_whitespace": {
                    "pattern": "\\p{Space}+",
                    "type": "pattern_replace",
                    "replacement": " "
                },
                "skip_brackets": {
                    "pattern": "[\\(\\)\\[\\]{}@#$*<>]",
                    "type": "pattern_replace",
                    "replacement": " "
                },
                "trim_minimal_punctuation": {
                    "type": "pattern_replace",
                    "pattern": "(\\p{Alnum}+)([,!?;/\\_]|\\.-)",
                    "replacement": "$1 "
                },
                "trim_whitespace": {
                    "pattern": "^\\s+|\\s+$",
                    "type": "pattern_replace",
                    "replacement": ""
                },
                "remove_floating_dashes": {
                    "type": "pattern_replace",
                    "pattern": "\\s+-+\\s+",
                    "replacement": " "
                }
            },
            "filter": {
                "autocomplete_filter": {
                    "type": "edge_ngram",
                    "min_gram": 1,
                    "max_gram": 10
                }
            },
            "normalizer": {
                "uppercase": {
                    "type": "custom",
                    "filter": [
                        "uppercase",
                        "asciifolding"
                    ]
                },
                "raw_clean": {
                    "type": "custom",
                    "filter": [
                        "lowercase",
                        "asciifolding"
                    ],
                    "char_filter": [
                        "ignore_quotes",
                        "skip_brackets",
                        "trim_minimal_punctuation",
                        "remove_floating_dashes",
                        "reduce_whitespace",
                        "trim_whitespace"
                    ]
                }
            },
            "analyzer": {
                "autocomplete": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "asciifolding",
                        "autocomplete_filter"
                    ]
                }
            }
        }
    },
    "mappings": {
        "dynamic": "strict",
        "properties": {
            "cui": {
                "type": "keyword",
                "normalizer": "uppercase"
            },
            "str": {
                "type": "text",
                "analyzer": "autocomplete",
                "search_analyzer": "standard"
            },
            "exact": {
                "type": "keyword",
                "normalizer": "raw_clean",
                "ignore_above": 40,
                "boost": 3
            },
            "pref": {
                "type": "text"
            },
            "source": {
                "type": "text",
                "index": false
            },
            "lang": {
                "type": "text",
                "index": false
            },
            "types": {
                "type": "text",
                "index": false
            }
        }
    }
}
